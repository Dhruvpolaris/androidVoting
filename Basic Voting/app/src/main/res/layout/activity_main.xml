<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.polaris.arkinsapplication.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Prom King"
            android:textSize="30sp"
            android:textColor="@android:color/holo_blue_dark"
            />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ashay"
            android:textColor="#9370DB"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            />
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunny"
            android:textColor="#9370DB"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />
        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aman"
            android:textColor="#9370DB"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />
        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sameer"
            android:textColor="#9370DB"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />
        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anzar"
            android:textColor="#9370DB"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />
        <RadioButton
            android:id="@+id/radio6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanket"
            android:textColor="#9370DB"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />
        <RadioButton
            android:id="@+id/radio7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arshdeep"
            android:textColor="#9370DB"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />

        <RadioButton
            android:id="@+id/radio8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Srisha"
            android:textColor="#9370DB"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />

    </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Prom Queen"
            android:textSize="30sp"
            android:textColor="@android:color/holo_red_light"
            />

            <RadioGroup
                android:id="@+id/radio_group_girls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anukriti"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    />
                <RadioButton
                    android:id="@+id/radio10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sadhana"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />
                <RadioButton
                    android:id="@+id/radio11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shraddha"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />
                <RadioButton
                    android:id="@+id/radio12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Afeefa"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />
                <RadioButton
                    android:id="@+id/radio13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shruti"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />
                <RadioButton
                    android:id="@+id/radio14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akila"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />
                <RadioButton
                    android:id="@+id/radio15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanya"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />

                <RadioButton
                    android:id="@+id/radio16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunanda"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />
                <RadioButton
                    android:id="@+id/radio17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Divya"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />

                <RadioButton
                    android:id="@+id/radio18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reshma"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />

                <RadioButton
                    android:id="@+id/radio19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bhoomika"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />

                <RadioButton
                    android:id="@+id/radio20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sai"
                    android:textColor="#9370DB"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    />

            </RadioGroup>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/submit_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:text="Vote"
                android:textAllCaps="true"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_marginTop="20dp"
                android:id="@+id/ViewResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/holo_red_light"
                android:textColor="#ffffff"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:text="ADMINISTRATOR LOGIN"
                android:textAllCaps="true" />

        </TableLayout>
    </ScrollView>

</LinearLayout>
